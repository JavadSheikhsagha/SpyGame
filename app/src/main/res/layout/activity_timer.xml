<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#C5CED8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">


    <com.asp.fliptimerviewlibrary.CountDownClock
        app:layout_constraintVertical_bias=".2"
        android:id="@+id/timerProgramCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:almostFinishedCallbackTimeInSeconds="20"
        app:animationDuration="850"
        app:countdownTickInterval="1000"
        app:digitDividerColor="@color/transparent"
        app:digitPadding="2dp"
        app:digitTextColor="@color/black"
        app:digitTextSize="24sp"
        app:digitWidth="28dp"
        app:halfDigitHeight="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resetSymbol="7"
        app:splitterPadding="0dp" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="نمایش نتیجه"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:cornerRadius="8dp"
        android:paddingVertical="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>